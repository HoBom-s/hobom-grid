{
  "name": "hobom-grid",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "prepare": "husky install",
    "ci:lint": "turbo lint",
    "ci:knip": "turbo knip",
    "ci:test": "turbo test",
    "ci:build": "turbo build",
    "dev": "turbo dev",
    "dev:examples": "pnpm --filter examples-react dev",
    "typecheck": "turbo typecheck",
    "typecheck:examples": "pnpm --filter examples-react typecheck",
    "build": "turbo build",
    "build:examples": "pnpm --filter examples-react build",
    "build:core": "pnpm -w --filter @hobom-grid/core build",
    "build:react": "pnpm -w --filter @hobom-grid/react build",
    "test": "turbo run test",
    "coverage": "turbo run coverage",
    "test:core": "pnpm -w --filter @hobom-grid/core test",
    "test:core:watch": "pnpm -w --filter @hobom-grid/core test:watch",
    "coverage:core": "pnpm -w --filter @hobom-grid/core coverage",
    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build",
    "docs:api": "pnpm --filter docs api",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "knip:core": "knip --workspace packages/core --exports",
    "knip:react": "knip --workspace packages/react --exports",
    "knip:packages": "pnpm -w knip:core && pnpm -w knip:react"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "knip": "^5.79.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  }
}
